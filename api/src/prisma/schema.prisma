generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Definição de enum para métodos de pagamento
enum PaymentMethod {
  CASH
  CREDIT_CARD
  BANK_TRANSFER
  MOBILE_MONEY
}

model User {
  id          Int           @id @default(autoincrement())
  name        String
  email       String        @unique
  password    String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  Loan        Loan[]
  Transaction Transaction[]
}

model Loan {
  id        Int       @id @default(autoincrement())
  amount    Float
  fees  Float
  duration  Int // Duração em meses
  status    String    @default("PENDING") // Status do empréstimo (PENDING, APPROVED, PAID)
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Payment   Payment[]
}

model Payment {
  id     Int           @id @default(autoincrement())
  amount Float
  paidAt DateTime      @default(now())
  method PaymentMethod // Método de pagamento (CASH, CREDIT_CARD, etc.)
  loanId Int
  loan   Loan          @relation(fields: [loanId], references: [id])
}

model Transaction {
  id        Int      @id @default(autoincrement())
  amount    Float
  type      String // Tipo de transação (CREDIT, DEBIT)
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
